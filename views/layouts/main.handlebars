    <title>Weather App</title>
</head>
<body class="bg-dark" style="font-family: 'Titillium Web', sans-serif;">
  <div class="container mt-5 align-self-center text-center">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h1 class="display-4 text-light">Weather App</h1>
        <p class="lead text-light">How is the weather in your city?</p>
        <form action="/weather" method="POST">
          <div class="form-group">
            <input type="text" class="form-control " name="cityName" placeholder="City">
          </div>
          <button type="submit" class="btn bg-light text-dark mt-4 fs-5 col-6">Get Weather</button>
        </form>
      </div>
    </div>
  </div>

    {{{body}}}

    
    <script>
        const date = document.getElementById('date');
        let d = (new Date()).toString().split(' ').splice(1,3).join(' ');
        date.textContent = d;
    </script>
</body>
</html>